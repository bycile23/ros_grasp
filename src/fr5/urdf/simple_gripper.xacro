<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="simple_gripper" params="prefix parent">
    
    <joint name="${prefix}gripper_base_joint" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="${parent}"/>
      <child link="${prefix}gripper_base_link"/>
    </joint>

    <link name="${prefix}gripper_base_link">
      <visual>
        <origin xyz="0 0 0.045" rpy="0 0 0"/> 
        <geometry><box size="0.03 0.12 0.09"/></geometry>
        <material name="black"><color rgba="0.1 0.1 0.1 1"/></material>
      </visual>
      <collision>
        <origin xyz="0 0 0.045" rpy="0 0 0"/>
        <geometry><box size="0.03 0.12 0.09"/></geometry>
      </collision>
      <inertial>
        <mass value="0.2" />
        <origin xyz="0 0 0.02" rpy="0 0 0"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
      </inertial>
    </link>

    <joint name="${prefix}left_finger_joint" type="prismatic">
      <origin xyz="0 -0.05 0.09" rpy="0 0 0"/> 
      <parent link="${prefix}gripper_base_link"/>
      <child link="${prefix}left_finger_link"/>
      <axis xyz="0 1 0"/>
      <limit lower="0.0" upper="0.04" effort="60.0" velocity="0.5"/>
      <dynamics damping="1.0" friction="0.1"/>
    </joint>

    <link name="${prefix}left_finger_link">
      <visual>
        <origin xyz="0 0.005 0.03" rpy="0 0 0"/>
        <geometry><box size="0.02 0.012 0.06"/></geometry>
        <material name="silver"/>
      </visual>
      <visual>
        <origin xyz="0 -0.002 0.05" rpy="0.2 0 0"/>
        <geometry><box size="0.02 0.008 0.03"/></geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin xyz="0 0.005 0.03" rpy="0 0 0"/>
        <geometry><box size="0.02 0.012 0.06"/></geometry>
      </collision>
      <inertial>
        <mass value="0.05" />
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
      </inertial>
    </link>

    <joint name="${prefix}right_finger_joint" type="prismatic">
      <origin xyz="0 0.05 0.09" rpy="0 0 0"/>
      <parent link="${prefix}gripper_base_link"/>
      <child link="${prefix}right_finger_link"/>
      <axis xyz="0 -1 0"/>
      <mimic joint="${prefix}left_finger_joint" multiplier="1" offset="0"/>
      <limit lower="0.0" upper="0.04" effort="60.0" velocity="0.5"/>
      <dynamics damping="1.0" friction="0.1"/>
    </joint>

    <link name="${prefix}right_finger_link">
      <visual>
        <origin xyz="0 -0.005 0.03" rpy="0 0 0"/>
        <geometry><box size="0.02 0.012 0.06"/></geometry>
        <material name="silver"/>
      </visual>
      <visual>
        <origin xyz="0 0.002 0.05" rpy="-0.2 0 0"/>
        <geometry><box size="0.02 0.008 0.03"/></geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin xyz="0 -0.005 0.03" rpy="0 0 0"/>
        <geometry><box size="0.02 0.012 0.06"/></geometry>
      </collision>
      <inertial>
        <mass value="0.05" />
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
      </inertial>
    </link>

    <gazebo reference="${prefix}left_finger_link">
      <mu1>1000.0</mu1>
      <mu2>1000.0</mu2>
      <kp>1000000.0</kp>
      <kd>1.0</kd>
      <minDepth>0.005</minDepth>
    </gazebo>

    <gazebo reference="${prefix}right_finger_link">
      <mu1>1000.0</mu1>
      <mu2>1000.0</mu2>
      <kp>1000000.0</kp>
      <kd>1.0</kd>
      <minDepth>0.005</minDepth>
    </gazebo>
    <gazebo>
      <plugin name="gazebo_grasp_fix" filename="libgazebo_grasp_fix.so">
        <arm>
          <arm_name>simple_gripper</arm_name>
          <tol_translate>0.02</tol_translate>
          <tol_angle>0.05</tol_angle>
          <grip_count_threshold>2</grip_count_threshold>
          <release_tolerance>0.005</release_tolerance>
          <disable_collisions_on_attach>false</disable_collisions_on_attach>
          <contact_topic>__default_topic__</contact_topic>
          <forces_angle_tolerance>100</forces_angle_tolerance>
          <update_rate>50</update_rate>
          
          <gripper_link>${prefix}left_finger_link</gripper_link>
          <gripper_link>${prefix}right_finger_link</gripper_link>
          
          <palm_link>${prefix}gripper_base_link</palm_link>
        </arm>
      </plugin>
    </gazebo>

  </xacro:macro>
</robot>